<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Login & Signup</title>
   <link rel="stylesheet" href="/css/login.css"> <!-- Include your custom CSS file -->
</head>

<body>
   <div class="wrapper">
      <div class="title-text">
         <div class="title login">Login Form</div>
         <div class="title signup">Register Here</div>
      </div>
      <div class="form-container">
         <div class="slide-controls">
            <input type="radio" name="slide" id="login" checked>
            <input type="radio" name="slide" id="signup">
            <label for="login" class="slide login">Login</label>
            <label for="signup" class="slide signup">Register</label>
            <div class="slider-tab"></div>
         </div>
         <div class="form-inner">
            <!-- Login Form -->
            <form action="/login" method="POST" class="login">
               <div class="field">
                  <input id="login_email" name="email" type="email" placeholder="Email Address" required>
               </div>
               <div class="field">
                  <input id="login_password" name="password" type="password" placeholder="Password" required>
               </div>
               <div class="field btn">
                  <div class="btn-layer"></div>
                  <input id="login_button" type="submit" value="Login">
               </div>
               <div class="signup-link">
                  Not a member? <label for="signup" style="cursor: pointer;">Register</label>
               </div>
            </form>

            <!-- Signup Form -->
            <form action="/register" method="POST" class="signup">
               <div class="field">
                  <input id="username" name="username" type="text" placeholder="Username" required>
               </div>
               <div class="field">
                  <input id="email" name="email" type="email" placeholder="Email Address" required>
               </div>
               <div class="field">
                  <input id="password" name="password" type="password" placeholder="Password" required>
               </div>
               <div class="field btn">
                  <div class="btn-layer"></div>
                  <input id="register_button" type="submit" value="Signup">
               </div>
            </form>
         </div>
      </div>
   </div>

   <!-- Include your JavaScript for interactivity (optional) -->
   <script>
      // Optional: Add logic to handle sliding between login and signup forms
      const loginRadio = document.getElementById('login');
      const signupRadio = document.getElementById('signup');

      loginRadio.addEventListener('change', () => {
         document.querySelector('.form-inner').style.marginLeft = '0';
      });

      signupRadio.addEventListener('change', () => {
         document.querySelector('.form-inner').style.marginLeft = '-100%';
      });
   </script>
</body>

</html>